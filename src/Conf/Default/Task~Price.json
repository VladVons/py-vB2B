{
    "dir_data": "./Data/Pl",
    "conf": [
        "./Data/Pl/Conf", 
        "./Data/Pl/In/Price.json"
    ],
    "comment": "Used PC Poland",
    "include": [
        "Task~Price_Vendor.json"
    ],
    "plugins": [
        {"name": "PricesPl", "enable": false},
        {"name": "Out_Save_txt", "enable": false},
        {"name": "In_Price_prom_xml", "enable": false},
        {"name": "Out_vShop_sql", "enable": true}
    ],
    "common": {
        "sleep_loop": 0.01,
        "save_cache": true
    },
    "plugin": {
        "PricesPl": {
            "depends": [
                "In_Price_pl01_xlsx"
            ]
        },
        "Out_Save_txt" : {
            "depends": [
                "In_Price_pl01_xlsx",
                "In_Price_prom_xml"
            ],
            "dir": "./Data/Pl/Save"
        },
        "In_Price_oster1c_xml": {
            "encoding": "cp1251"
        },
        "In_Price_prom_xml": {
        },
        "Out_vShop_sql": {
            "site_image": "catalog/products",
            "sql": {
                "parts": 25,
                "tenant_id": 1,
                "lang_id": 1,
                "price_id": 1
            },
            "depends": [
                "-In_Price_prom_xml",
                "In_Price_oster1c_xml"
            ]
        }
    }
}
